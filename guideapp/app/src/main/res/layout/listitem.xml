<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/PhotoDistance"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/PhotoDistance"
        android:layout_marginTop="12dp"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/PhotoDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/photo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:background="#8000"
        android:text="2131Km"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/PhotoTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PhotoDescription"
        android:layout_alignStart="@+id/PhotoDescription"
        android:layout_alignTop="@+id/photo"
        android:text="Titre"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/PhotoDescription"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignBottom="@+id/photo"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_toEndOf="@+id/photo"
        android:layout_toRightOf="@+id/photo"
        android:text="ID luncher description"/>

</RelativeLayout>