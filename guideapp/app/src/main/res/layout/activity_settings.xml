<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.link.sergio.guideapp.SettingsActivity"
    android:background="#FFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textViewSettingsGeneral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Général information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/background_setting_item"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:height="30sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSettingsCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30sp"
                android:background="@drawable/background_setting_item"
                android:fontFamily="sans-serif"
                android:paddingLeft="40dp"
                android:text="Credits"
                android:textColor="#c6c6c6"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_dialog_info" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewSettingsContactsupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="30sp"
                android:background="@drawable/background_setting_item"
                android:fontFamily="sans-serif"
                android:paddingLeft="40dp"
                android:text="Contact support"
                android:textColor="#c6c6c6"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewContactSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@android:drawable/ic_dialog_info" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Distances"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/background_setting_item"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:height="30sp"
            />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Cache"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/background_setting_item"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:height="30sp"
            />

    </LinearLayout>

</ScrollView>
